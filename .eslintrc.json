{
    "overrides": [
        {
            "env": {
                "browser": true,
                "es6": true,
                "es2017": true,
                "jquery": true
            },
            "files": [
                "src/**/*.js"
            ],
            "extends": [
                "standard",
                "htmlacademy/es6"
            ],
            "rules": {
                "no-var": "error",
                "no-multi-spaces": "error",
                "space-in-parens": "error",
                "no-multiple-empty-lines": "error",
                "prefer-const": "error",
                "no-use-before-define": "error",
                "indent": [
                    "error",
                    4
                ],
                "semi": [
                    "error",
                    "never"
                ],
                "quotes": [
                    "error",
                    "backtick"
                ]
            }
        }
    ]
}
